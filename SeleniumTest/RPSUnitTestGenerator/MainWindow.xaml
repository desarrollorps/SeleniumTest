<Window x:Class="RPSUnitTestGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPSUnitTestGenerator"
        mc:Ignorable="d"
        Title="Unit Test Generator" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <StackPanel VerticalAlignment="Stretch">
        <Label HorizontalAlignment="Center" FontSize="30"   Content="This tool will generate/update a framework" ></Label>
        <Label HorizontalAlignment="Center" FontSize="30"    Content="for unit testing projects in rps" ></Label>
        <Button x:Name="btnNext" HorizontalAlignment="Center" Width="100" Margin="0,100,0,0" VerticalAlignment="Center" Content="Start" Click="btnNext_Click"></Button>
        <Button x:Name="btnExit" HorizontalAlignment="Center" Width="100" Margin="0,30,0,0" VerticalAlignment="Center" Content="Exit" Click="btnExit_Click"></Button>
    </StackPanel>
</Window>
